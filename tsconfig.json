{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "paths": {
      "@shared/*": ["src/app/shared/*"],
      "@app/*": ["src/app/*"],
      "@env/*": ["src/environments/*"],
      "@root/*": ["src/*"]
    }
  }
}
